@model IEnumerable<ProjetoM2.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de clientes</h2>

<p>
    @Html.ActionLink("Cadastrar cliente", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Nome: @Html.TextBox("nome", (string)ViewBag.Filtro)
        <input type="submit" value="Filtrar" />
    </p>
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "Index", new { ordenar = ViewBag.OrdenarNome, nome = ViewBag.Filtro })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>